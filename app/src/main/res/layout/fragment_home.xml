<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/center_rec"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:text="Today"
                android:textColor="#FFFF"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/reward_white" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-227dp"
            android:layout_marginTop="72dp"
            android:text="펫니스"
            android:textColor="#FFFF"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-163dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:text="반려동물 의료 및 보험서비스\n APP 개발 프로젝트"
            android:textColor="#FFFF"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-360dp"
            android:layout_marginTop="232dp"
            android:text="2020.08.29~2020.10.07"
            android:textColor="#FFFF"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="216dp"
            android:layout_marginTop="212dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/gogog" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_marginLeft="-227dp"
            android:layout_marginTop="274dp"
            android:src="@drawable/three_dot" />


    </LinearLayout>//트렌드 ui


    <ListView
        android:id="@+id/HomeProjectListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/more_project"
        style="@android:style/Widget.Button"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/signup"
        android:text="프로젝트 더보기"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="bold" />



</LinearLayout>