<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="activity"
            type="Project.ProjectDetailActivity"/>
    </data>

    <ScrollView
        android:id="@+id/projectDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/projectdetail"
        android:fillViewport="true"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="left"

                    android:layout_marginLeft="12dp"
                    android:src="@drawable/back_white" />



                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="340dp"
                    android:src="@drawable/link_out" />
            </LinearLayout> //뒤로가기버튼포함레이아웃

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="60dp"
                    android:gravity="bottom|center_horizontal|center_vertical"
                    android:text="APP"
                    android:textColor="#FE28A2"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/textView"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="ddddddddddd"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </RelativeLayout> //프로젝트제목

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/gray_round_background"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/reward"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/reward" />

                <TextView
                    android:id="@+id/rewardText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#303030"
                    />

                <ImageView
                    android:id="@+id/deadline"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/deadline" />

                <TextView
                    android:id="@+id/deadlineText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#303030"/>
            </LinearLayout>//상금,데드라인

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/white_half_round_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="22dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/infoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:text="정보"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/infoView"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="10dp"
                            android:background="#000000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="22dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/matchText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:text="팀모집"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/matchView"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="10dp"
                            android:background="#000000"
                            android:visibility="invisible" />
                    </LinearLayout>


                </LinearLayout>
                //탭레이아웃

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-409dp"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical"
                    android:paddingTop="50dp">

                    <LinearLayout
                        android:id="@+id/infoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:background="#E7E7E7"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">


                                <ImageView
                                    android:id="@+id/enter"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"

                                    android:src="@drawable/enterprise_image" />

                                <TextView
                                    android:id="@+id/textView41"
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:paddingLeft="8dp"
                                    android:text="기업명"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="18dp"

                                android:layout_marginBottom="20dp">


                                <TextView
                                    android:id="@+id/textView_companyContents"
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:text="iHQ"
                                    android:textSize="14dp" />

                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="#E7E7E7"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">


                                <ImageView
                                    android:id="@+id/service"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"

                                    android:src="@drawable/projectdetail_service" />

                                <TextView
                                    android:id="@+id/textView39"
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:paddingLeft="8dp"
                                    android:text="서비스 설명"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="20dp">


                                <TextView
                                    android:id="@+id/textView_descriptionContents"
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:text="TextView"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:background="#E7E7E7"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">


                                <ImageView
                                    android:id="@+id/develop_design"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginLeft="10dp"

                                    android:src="@drawable/projectdetail_service" />

                                <TextView
                                    android:id="@+id/textView38"
                                    android:layout_width="wrap_content"
                                    android:layout_height="24dp"
                                    android:paddingLeft="8dp"
                                    android:text="개발 및 디자인 방향"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginBottom="20dp">


                                <TextView
                                    android:id="@+id/textView_directionContents"
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:text="TextView"
                                    android:textSize="14dp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    //정보 상세 레이아웃

                    <LinearLayout
                        android:id="@+id/matchLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="14dp"
                            android:background="@drawable/gray_round_background"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/group"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/group" />

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="46dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="22dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="개발자"
                                android:textColor="#303030"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="29dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="2~3"
                                android:textColor="#FE28A2"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView32"
                                android:layout_width="14dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="명"
                                android:textColor="#303030"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/bar"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="32dp"
                                android:layout_marginRight="32dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:src="@drawable/line_lin" />

                            <TextView
                                android:id="@+id/textView33"
                                android:layout_width="58dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="디자이너"
                                android:textColor="#303030"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="29dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="2~3"
                                android:textColor="#FE28A2"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="13dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="24dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="명"
                                android:textColor="#303030"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        //개발디자이너 모집인원

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <ListView
                                android:id="@+id/listView_teamList"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF">

                            </ListView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_createTeam"
                                android:layout_width="335dp"
                                android:layout_height="58dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/signup"
                                android:gravity="center_vertical"
                                android:text="팀 만들기"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="17dp"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>
                    //팀모집 상세 레이아웃

                    <LinearLayout
                        android:id="@+id/submitLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:visibility="visible">

                    </LinearLayout>//제출 상세 레이아웃

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>



</layout>