<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E7E7E7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="알림"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:background="#909090"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/chat_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/chat_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <RelativeLayout
                    android:id="@+id/chat_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/white_round_background"
                    android:elevation="10dp"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/alarm_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="APP"
                        android:textColor="#FE28A2"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/corporation_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/alarm_category"
                        android:text="세동상사"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/alarm_contents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alarm_category"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="12dp"
                        android:text="상세내용 ㅇㅇㄴㅁㄴㅇㄻㄴㅇㄹ;ㅂ잗ㄻㄴㅇ;리ㅏㅁ넝럼ㄴ;ㅇㄻㅇㄴㄻㄴ이라ㅓ"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/icon_alarm"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_below="@+id/alarm_contents"
                        android:src="@drawable/icon_alarm" />

                    <TextView
                        android:id="@+id/project_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_alarm"
                        android:layout_toRightOf="@+id/icon_alarm"
                        android:paddingLeft="8dp"
                        android:text="~2020.08.29(D-?일)"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/icon_point"
                        android:layout_width="24dp"
                        android:layout_height="12dp"
                        android:layout_alignBottom="@+id/project_deadline"
                        android:layout_toRightOf="@+id/project_deadline"
                        android:paddingLeft="11dp"
                        android:src="@drawable/icon_point" />

                    <TextView
                        android:id="@+id/prize_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/icon_point"
                        android:layout_toRightOf="@+id/icon_point"
                        android:paddingLeft="8dp"
                        android:text="100만원"
                        android:textColor="#000"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/icon_alarm"
                        android:layout_marginTop="10dp"
                        android:background="#9B9B9B" />

                    <TextView
                        android:id="@+id/chat_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/icon_alarm"
                        android:layout_marginTop="20dp"
                        android:text="신규 프로젝트가 업데이트되었습니다"
                        android:textColor="#000"
                        android:textSize="11sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/icon_date"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_below="@+id/chat_box"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circle" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/icon_date"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/icon_date"
                    android:text="2020.08.17 22:20:17"
                    android:textColor="#000"
                    android:textSize="11sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>